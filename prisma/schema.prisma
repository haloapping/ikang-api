generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Fish {
  id             String         @id @default(ulid())
  slug           String
  name           String         @unique
  scientificName String?        @unique
  size           String?
  diet           String?
  lifespan       String?
  status         String?
  color          String?
  waterType      String?
  reproduction   String?
  behavior       String?
  habitats       FishHabitat[]
  predators      FishPredator[]
  createdAt      DateTime       @default(now())
  updatedAt      DateTime?      @updatedAt
}

model Habitat {
  id        String        @id @default(ulid())
  slug      String
  name      String        @unique
  fishes    FishHabitat[]
  createdAt DateTime      @default(now())
  updatedAt DateTime?     @updatedAt
}

model Predator {
  id        String         @id @default(ulid())
  slug      String
  name      String         @unique
  predators FishPredator[]
  createdAt DateTime       @default(now())
  updatedAt DateTime?      @updatedAt
}

model FishHabitat {
  id        String    @id @default(ulid())
  fishId    String
  habitatId String
  fish      Fish      @relation(fields: [fishId], references: [id], onDelete: Cascade)
  habitat   Habitat   @relation(fields: [habitatId], references: [id], onDelete: Cascade)
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
}

model FishPredator {
  id         String    @id @default(ulid())
  fishId     String
  fish       Fish      @relation(fields: [fishId], references: [id], onDelete: Cascade)
  predatorId String
  predator   Predator  @relation(fields: [predatorId], references: [id], onDelete: Cascade)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime? @updatedAt
}
