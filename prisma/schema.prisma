generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Fish {
  id String @id @default(ulid())

  slug           String  @unique
  name           String  @unique
  scientificName String? @unique
  size           String?
  diet           String?
  lifespan       String?
  status         String?
  color          String?
  waterType      String?
  reproduction   String?
  behavior       String?

  habitats  Habitat[]
  predators Predator[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Habitat {
  id String @id @default(ulid())

  slug   String @unique
  name   String @unique
  fishes Fish[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Predator {
  id String @id @default(ulid())

  slug   String @unique
  name   String @unique
  fishes Fish[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
