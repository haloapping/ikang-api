generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Fish {
  id             String     @id @default(ulid())
  slug           String
  name           String     @unique
  scientificName String?    @unique
  size           String?
  diet           String?
  lifespan       String?
  status         String?
  color          String?
  waterType      String?
  reproduction   String?
  behavior       String?
  createdAt      DateTime   @default(now())
  updatedAt      DateTime?  @updatedAt
  habitats       Habitat[]
  predators      Predator[]
}

model Habitat {
  id        String    @id @default(ulid())
  slug      String
  name      String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
  fishes    Fish[]
}

model Predator {
  id        String    @id @default(ulid())
  slug      String
  name      String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
  fishes    Fish[]
}
